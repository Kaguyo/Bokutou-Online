{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    /* Language and Module Settings */
    "target": "ES2020",                            /* Specify ECMAScript target version */
    "module": "CommonJS",                         /* Specify module code generation */
    "esModuleInterop": true,                      /* Allows default imports for CommonJS modules */
    "forceConsistentCasingInFileNames": true,     /* Ensure file names consistency */

    /* Output Settings */
    "outDir": "./dist",                           /* Redirect output structure to the 'dist' folder */
    "rootDir": "./",                              /* Specify the root directory of source files */
    
    /* Type Checking and Quality */
    "strict": true,                               /* Enable all strict type-checking options */
    "skipLibCheck": true                          /* Skip type checking of declaration files */
  }
}
